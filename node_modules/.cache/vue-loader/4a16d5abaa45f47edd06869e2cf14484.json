alStorage.getItem(\"USER_AUTH\"));\r\n                if(userauth == null){\r\n                    console.log(\"oh no\");\r\n                }\r\n            }\r\n        },\r\n        created() {\r\n            axios.get(\"http://192.168.1.238:92/api/rutasTrasporte/get.php\").then((result) => {\r\n                this.Rutas = result.data;\r\n            })\r\n        }\r\n    };\r\n</script>\r\n<style>\r\n    .content{\r\n        background: rgb(0,114,179);\r\n        background: linear-gradient(90deg, rgba(0,114,179,1) 60%, rgb(255, 255, 255) 60%);\r\n    }\r\n    @media (max-width: 600px) {\r\n        .content{\r\n            background: rgb(0,114,179);\r\n            background: linear-gradient(180deg, rgba(0,114,179,1) 30%, rgb(255, 255, 255) 30%);;\r\n        }\r\n    }\r\n</style>"]}]}